<h1>New Victim</h1>
<% if @victim.errors.any? %>
    <ul>
        <% @victim.errors.full_messages.each do |m| %>
            <li class="error"><%= m %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @victim do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <br>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <br>
    <%= form.label :password %>
    <%= form.text_field :password %>
    <br>
    <br>
    <%= form.submit %>

<% end %>

